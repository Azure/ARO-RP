RUN make -C build
RUN make -C build install

FROM mcr.microsoft.com/cbl-mariner/distroless/base:2.0.${MARINER_VERSION}-amd64
COPY --from=builder \
    /lib/libsystemd.so.0 \
    /lib/liblzma.so.5 \
    /lib/liblz4.so.1 \
    /lib/libcap.so.2 \
    /lib/libmount.so.1 \
    /lib/libgcrypt.so.20 \
    /lib/libblkid.so.1 \
    /lib/libuuid.so.1 \
    /lib/libselinux.so.1 \
    /lib/libgpg-error.so.0 \
    /lib/libpcre.so.1 \
    /lib/
COPY --from=builder /opt/td-agent-bit/bin/fluent-bit /opt/td-agent-bit/bin/td-agent-bit
ENTRYPOINT ["/opt/td-agent-bit/bin/td-agent-bit"]
