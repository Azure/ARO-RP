    -DFLB_IN_NODE_EXPORTER_METRICS="Off" \
    -DFLB_IN_PROC="Off" \
    -DFLB_IN_PROMETHEUS_SCRAPE="Off" \
    -DFLB_IN_RANDOM="Off" \
    -DFLB_IN_SERIAL="Off" \
    -DFLB_IN_STATSD="Off" \
    -DFLB_IN_STDIN="Off" \
    -DFLB_IN_SYSLOG="Off" \
    -DFLB_IN_SYSTEMD="On" \
    -DFLB_IN_TCP="Off" \
    -DFLB_IN_THERMAL="Off" \
    -DFLB_IN_OPENTELEMETRY="Off" \
    -DFLB_IN_UDP="Off" \
