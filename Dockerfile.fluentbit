    -DFLB_IN_DUMMY="Off" \
    -DFLB_IN_EXEC_WASI="Off" \
    -DFLB_IN_EXEC="Off" \
    -DFLB_IN_FLUENTBIT_METRICS="Off" \
    -DFLB_IN_FORWARD="Off" \
    -DFLB_IN_HEAD="Off" \
    -DFLB_IN_HEALTH="Off" \
    -DFLB_IN_HTTP="Off" \
    -DFLB_IN_KMSG="Off" \
    -DFLB_IN_MEM="Off" \
    -DFLB_IN_MQTT="Off" \
    -DFLB_IN_NETIF="Off" \
