# Uses a multi-stage container build to build the proxy
#
ARG REGISTRY
FROM mcr.microsoft.com/oss/go/microsoft/golang:1.22.9-azurelinux3.0 AS builder
USER root
ENV GOPATH=/root/go
RUN mkdir -p /app
WORKDIR /app

COPY . /app
RUN make proxy

FROM mcr.microsoft.com/azurelinux/distroless/minimal:3.0
RUN microdnf update && microdnf clean all
COPY --from=builder /app/proxy /usr/local/bin/
ENTRYPOINT ["proxy"]
EXPOSE 8443/tcp
EXPOSE 8080/tcp
USER 1000
