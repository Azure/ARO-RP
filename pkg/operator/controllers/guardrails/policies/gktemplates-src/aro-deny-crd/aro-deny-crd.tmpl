apiVersion: templates.gatekeeper.sh/v1
kind: ConstraintTemplate
metadata:
  name: arodenycrd
  annotations:
    description: >-
      Do not allow regular user modify or create generated CRD
      machine config regex match: ^.+(gatekeeper.sh|openshift.io|metal3.io|coreos.com|cncf.io|k8s.io|ovn.org)$
spec:
  crd:
    spec:
      names:
        kind: ARODenyCRD
  targets:
    - target: admission.k8s.gatekeeper.sh
      rego: |
{{ file.Read "gktemplates-src/aro-deny-crd/src.rego" | strings.Indent 8 | strings.TrimSuffix "\n" }}
      libs:
        - |
{{ file.Read "gktemplates-src/library/common.rego" | strings.Indent 10 | strings.TrimSuffix "\n" }}
