apiVersion: templates.gatekeeper.sh/v1
kind: ConstraintTemplate
metadata:
  name: aroupgradeconfig
  annotations:
    metadata.gatekeeper.sh/title: "UpgradeConfig"
    metadata.gatekeeper.sh/version: 1.0.0
    description: >-
      Disallows editing UpgradeConfig by regular users if there is a "cloud.openshift.com" entry in "openshift-config/pull-secret".

spec:
  crd:
    spec:
      names:
        kind: AROUpgradeConfig
      validation:
        # Schema for the `parameters` field
        openAPIV3Schema:
          type: object
          description: >-
            Disallows editing UpgradeConfig by regular users if there is a "cloud.openshift.com" entry in "openshift-config/pull-secret".
  targets:
    - target: admission.k8s.gatekeeper.sh
      rego: |
{{ file.Read "gktemplates-src/aro-deny-upgradeconfig/src.rego" | strings.Indent 8 | strings.TrimSuffix "\n" }}
      libs:
        - |
{{ file.Read "gktemplates-src/library/common.rego" | strings.Indent 10 | strings.TrimSuffix "\n" }}
